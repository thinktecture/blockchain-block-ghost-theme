<ul class="nav">
  {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
  {{/foreach}}
  {{#if @blog.facebook}}
    <li><a class="social-link social-link-facebook" href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">facebook</a></li>
  {{/if}}
  {{#if @blog.twitter}}
    <li><a class="social-link social-link-twitter" href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">twitter</a></li>
  {{/if}}
  <li><a class="social-link social-link-rss" href="{{@blog.url}}/rss/" target="_blank" rel="noopener">rss</a></li>
</ul>
